<!-- DASHBOARD CONTENT -->
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <!-- TODO -->
    <div class="col-lg-6">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <h2>Winston ti consiglia di...</h2>
          <small>Ecco una lista delle cose importanti da fare oggi.</small>
          <ul class="todo-list m-t small-list">
            <% if todos %>
              <% todos.each do |todo| %>
              <li>
                <i class="fa fa-angle-right"></i>
                <span class="m-l-xs"><%= todo %></span>
              </li>
              <% end %>
            <% else %>
            <li>
              <i class="fa fa-check"></i>
              <span class="m-l-xs">Tutto fatto! Winston non ha consigli per te oggi.</span>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <!-- END TODO -->

    <!-- FOOTPRINT SCORE -->
    <div class="col-lg-6">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Footprint Score</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <p>
